// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.166.1/containers/cpp
{
	"name": "ROS dev container for Orbslam3 Original",
	"build": {
		"context": "..", 
		"dockerfile": "Dockerfile",
		"args": {}
	},
	"runArgs": ["--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined",
		"--net=host",
		"--ipc=host",
		"--privileged=true",
		"--runtime=nvidia",
		"--gpus=all",
		"--env=DISPLAY", 
		"--env=QT_X11_NO_MITSHM=1",
		"--env=NVIDIA_VISIBLE_DEVICES=all",
		"--env=NVIDIA_DRIVER_CAPABILITIES=all"
	], 
 	"initializeCommand": "xhost +local:docker",
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-vscode.cpptools",
		"streetsidesoftware.code-spell-checker",
		"docsmsft.docs-markdown",
		"redhat.vscode-yaml",
		"eamodio.gitlens",
		"ms-vscode.cmake-tools",
		"twxs.cmake"
	],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": [],

	"remoteUser": "root",
	"mounts": [
		"source=/home/haubenstock/rosbags/openrealm,target=/bags,type=bind,consistency=cached"
	]
}
